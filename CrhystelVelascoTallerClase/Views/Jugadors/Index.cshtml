@model IEnumerable<CrhystelVelascoTallerClase.Models.Jugador>

@{
    ViewData["Title"] = "Index";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1>Jugadores Actuales</h1>
            <p>

                <label for="Filtrar" class="mb-2">Filtrar por equipo:</label>
                <select id="Filtrar" class="form-control">
                    <option value="">Equipos</option>
                    @foreach (var equipo in ViewBag.Equipos)
                    {
                        <option value="@equipo.Id">@equipo.Nombre</option>
                    }
                </select>
                <a class="btn btn-success" asp-action="Create">Añadir Jugador</a>
            </p>
            <table class="table table-bordered">
                <thead class="bg-dark text-white">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Nombre)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Posicion)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Edad)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Equipo)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nombre)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Posicion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Edad)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Equipo.Nombre)
                            </td>
                            <td>
                                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Editar</a> 
                                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Detalles</a> 
                                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>

