@model CrhystelVelascoTallerClase.Models.Jugador

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border">
                <div class="card-header bg-dark">
                    <h4 class="text-white"><strong>Detalles del Jugador</strong></h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <div>

                            <dl class="row">
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Nombre)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Nombre)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Posicion)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Posicion)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Edad)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Edad)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Equipo)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Equipo.Id)
                                </dd>
                            </dl>
                            <div>
                                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary mr-2">Editar</a> |
                                <a asp-action="Index" btn btn-secondary ml-2>Regresar</a>
                            </div>
                        </div>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>



