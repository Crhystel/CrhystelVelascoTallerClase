@model CrhystelVelascoTallerClase.Models.Equipo

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border">
                <div class="card-header bg-dark">
                    <h4 class="text-white"><strong>Detalles del Equipo</strong></h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3" style="font-weight: bold;">
                            @Html.DisplayNameFor(model => model.Nombre)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Nombre)
                        </dd>
                        <dt class="col-sm-3" style="font-weight: bold;">
                            @Html.DisplayNameFor(model => model.Ciudad)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Ciudad)
                        </dd>
                        <dt class="col-sm-3" style="font-weight: bold;">
                            @Html.DisplayNameFor(model => model.Titulo)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Titulo)
                        </dd>
                        <dt class="col-sm-3" style="font-weight: bold;">
                            @Html.DisplayNameFor(model => model.AceptaExtranjeros)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.AceptaExtranjeros)
                        </dd>
                        <dt class="col-sm-3" style="font-weight: bold;">
                            @Html.DisplayNameFor(model => model.Estadio)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Estadio.Id)
                        </dd>
                    </dl>
                   
                    <div class="form-group mt-3">
                        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary mr-2">Editar</a>
                        <a asp-action="Index" class="btn btn-secondary ml-2">Regresar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
