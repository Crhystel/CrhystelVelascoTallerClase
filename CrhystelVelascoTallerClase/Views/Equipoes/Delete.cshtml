@model CrhystelVelascoTallerClase.Models.Equipo

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border">
                <div class="card-header bg-dark">
                    <h4 class="text-white"><strong>Eliminar Equipo</strong></h4>
                </div>
                <div class="card-body">
                   
                        <dl class="row">
                            <dt class="col-sm-3" style="font-weight: bold;">
                                @Html.DisplayNameFor(model => model.Nombre)
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.Nombre)
                            </dd>
                            <dt class="col-sm-3" style="font-weight: bold;">
                                @Html.DisplayNameFor(model => model.Ciudad)
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.Ciudad)
                            </dd>
                            <dt class="col-sm-3" style="font-weight: bold;">
                                @Html.DisplayNameFor(model => model.Titulo)
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.Titulo)
                            </dd>
                            <dt class="col-sm-3" style="font-weight: bold;">
                                @Html.DisplayNameFor(model => model.AceptaExtranjeros)
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.AceptaExtranjeros)
                            </dd>
                            <dt class="col-sm-3" style="font-weight: bold;">
                                @Html.DisplayNameFor(model => model.Estadio)
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.Estadio.Id)
                            </dd>
                        </dl>
					<form asp-action="Delete">
						<input type="hidden" asp-for="Id" />
						<input type="submit" value="Eliminar" class="btn btn-danger" />
						<a asp-action="Index" class="btn btn-secondary ml-2">Regresar</a>
					</form>
                </div>

                   
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}



